<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/user_profile_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logged_in_user" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_profile_img"
            android:text="user name" />

        <TextView
            android:id="@+id/post_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="location" />

        <ImageView
            android:id="@+id/post_location_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/post_location"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/user_post_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_img"
            android:layout_marginBottom="10dp"
            android:text="some caption" />

        <ImageView
            android:id="@+id/user_post_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_post_caption"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logged_in_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_post_picture"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:id="@+id/threeIcons">

            <ImageView
                android:id="@+id/user_post_fav_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/heart_icon" />

            <ImageView
                android:id="@+id/user_post_comment_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/comment_icon" />

            <ImageView
                android:id="@+id/user_post_forward_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/forward_icon" />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_post_time"
                android:text="time"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/threeIcons"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/friend_comment_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="friend name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/friend_comment_friend_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="friend comment" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>